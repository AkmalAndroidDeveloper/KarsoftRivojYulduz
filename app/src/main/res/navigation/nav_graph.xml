<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.karsoftrivojyulduz.presentation.ui.orders.OrdersFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.karsoftrivojyulduz.presentation.ui.histories.HistoriesFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_histories">
        <action
            android:id="@+id/action_historyFragment_to_orderFragment"
            app:destination="@id/orderFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.karsoftrivojyulduz.presentation.ui.submitorder.SubmitOrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_submit_order">
        <argument
            android:name="orderId"
            app:argType="integer" />
        <argument
            android:name="fromHistoryFragment"
            app:argType="boolean" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="address"
            app:argType="string" />
        <argument
            android:name="customerName"
            app:argType="string" />
        <argument
            android:name="customerPhoneNumber"
            app:argType="string" />
        <argument
            android:name="statusId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.karsoftrivojyulduz.presentation.ui.signin.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>